<Window x:Class="Presentation.Pages.PizzaCreationPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.Pages"
        mc:Ignorable="d"
        Title="OrderItemCreation" Height="400" Width="550">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="False" Margin="5">
            <StackPanel Margin="10 0" Width="200" Height="96">
                <Label>Sabor</Label>
                <ComboBox x:Name="cbFirstTopping" SelectionChanged="cbFirstTopping_SelectionChanged"/>
                <Label>2º Sabor</Label>
                <ComboBox x:Name="cbSecondTopping" SelectionChanged="cbSecondTopping_SelectionChanged"/>
            </StackPanel>
            <StackPanel MinWidth="130" Margin="10 0" Width="130" Height="96">
                <Label>Borda</Label>
                <ComboBox x:Name="cbBorder" SelectionChanged="cbBorder_SelectionChanged"/>
                <Label>Preço (R$)</Label>
                <Label x:Name="PizzaPrice"></Label>
            </StackPanel>
            <StackPanel MinWidth="130" Margin="10 0">
                <Label>Quantidade </Label>
                <TextBox x:Name="txtQuantity"/>
                <Button  MinWidth="80" Margin="0 32 0 0">
                    Adicionar
                </Button>
            </StackPanel>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button  MinWidth="80" Margin="10">
                Cancelar
            </Button>
            <Button  x:Name="OK" Margin="10" MinWidth="80px" DockPanel.Dock="Bottom" >
                OK
            </Button>
        </DockPanel>
        <DockPanel Margin="5">
            <ListView >
                <ListView.View>
                    <GridView AllowsColumnReorder="False" >
                        <GridViewColumn Header="Sabor" Width="180" DisplayMemberBinding="{Binding Path=Name}" />
                        <GridViewColumn Header="2º Sabor" Width="180" DisplayMemberBinding="{Binding Path=Name}" />
                        <GridViewColumn Header="Borda" Width="120" DisplayMemberBinding="{Binding Path=Name}" />
                        <GridViewColumn Header="Qnt." Width="60" DisplayMemberBinding="{Binding Path=Name}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </DockPanel>
</Window>
